# Cổng server (sẽ sử dụng PORT từ hệ thống khi deploy)
PORT=5000

# Chuỗi kết nối MongoDB (sử dụng MongoDB Atlas khi deploy)
# Ví dụ: mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGODB_URI=mongodb+srv://your_username:your_password@cluster.mongodb.net/your_database

# Các secret nên được tạo ngẫu nhiên và giữ bí mật
JWT_SECRET=chuoi_bi_mat_jwt_ngau_nhien_va_dai_hon_de_bao_mat_he_thong
SESSION_SECRET=chuoi_bi_mat_session_ngau_nhien

# Thông tin Google OAuth (cập nhật lại đường dẫn callback khi deploy)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://yourdomain.com/api/auth/google/callback

# Thông tin email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password